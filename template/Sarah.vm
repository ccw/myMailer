<body>

<table width="100%" border="0" align="center" cellpadding="0" cellspacing="0">
    <tr>
        <td>
            <div align="center" class="BigTitle">:: $singer ::</div>
        </td>
    </tr>
    <tr>
        <td>
            <div align="center" class="SmallTitle">~ $title ~</div>
        </td>
    </tr>
    <tr>
        <td>
            <div class="Context">&nbsp;</div>
        </td>
    </tr>
    <tr>
        <td>
            <div align="center" class="Context">$musicIndex.$subject</div>
        </td>
    </tr>
    <tr>
        <td>
            <div class="Context">
                <div align="center">$composer</div>
            </div>
        </td>
    </tr>
    <tr>
        <td>
            <div align="center" class="Context">&nbsp;</div>
        </td>
    </tr>

    #foreach( $lyrics in $lyricsList )
    <tr>
        <td>
            <div align="center" class="Context">$lyrics</div>
        </td>
    </tr>
    #end

    <tr>
        <td>
            <div align="center" class="Context">&nbsp;</div>
        </td>
    </tr>
